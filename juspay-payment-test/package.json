  "description": "JusPay Payment Gateway Testing Environment",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "mock": "node envSwitcher.js mock && node mockTestRunner.js",
    "env:mock": "node envSwitcher.js mock",
    "env:real": "node envSwitcher.js real",
    "env:status": "node envSwitcher.js status",
