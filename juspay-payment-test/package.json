    "test:dashboard": "node mockTestRunner.js && echo 'Check your JusPay dashboard for test transactions'",
    "glocoin:setup": "node gloCoinTest.js",
    "glocoin:test": "node gloCoinTest.js && echo 'Glo Coin system ready! Open http://localhost:3000/glocoin'"
  },
  "keywords": [
    "juspay",
    "payment",
    "gateway",
    "testing"
